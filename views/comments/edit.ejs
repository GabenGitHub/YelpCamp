<% include ../partials/header %>

<div class="container">
    <div class="row">

        <div class="col-md-12 text-center">
            <h1 style="text-align: center;">Edit your comment</h1>
        </div>

        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>

    </div>
</div>

<% include ../partials/footer %>